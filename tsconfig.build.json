{
      "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "outDir": "dist",
        "rootDir": ".",
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true
      },
      "include": ["index.ts", "thai-unicool_lib.ts", "types/**/*.ts"],
      "exclude": ["node_modules", "dist"]
}    